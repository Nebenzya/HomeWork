<Window x:Class="Journal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Journal" Height="450" Width="700" ResizeMode="NoResize">
    <Grid>
        <StackPanel x:Name="mainSP" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Height="50" VerticalAlignment="Top" Background="LightGreen">
                <TextBlock Text="Фото" FontSize="14" Width="100" TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold"/>
                <TextBlock Text="ФИО Студента" FontSize="14" Width="150" TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold"/>
                <TextBlock Text="Присутствие на занятие" FontSize="14" Width="150" TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold"/>
                <TextBlock Text="Оценка" FontSize="14" Width="150" TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold"/>
                <TextBlock Text="Комментарий" FontSize="14" Width="150" TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold"/>
            </StackPanel>
            <Border BorderBrush="Cyan" BorderThickness="0.5"/>
        </StackPanel>
        
    </Grid>
</Window>
