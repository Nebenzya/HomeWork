<Window x:Class="ProcessClass.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notepad Creator" Height="200" Width="400" ResizeMode="NoResize">
    <Grid Background="Black">
        <StackPanel Orientation="Vertical">
            <Label Content="Введите название текстого файла:" Foreground="White" Margin="0,10"
                   FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Top" />
            <TextBox x:Name="inputText" FontSize="18" HorizontalAlignment="Center"
                     Width="300" Height="30" Margin="0,10"/>
            <Button x:Name="start" Click="start_Click" Width="50" Height="30"
                HorizontalAlignment="Center" Background="LawnGreen">
                <TextBlock Text="Go" FontSize="18" Foreground="White"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
